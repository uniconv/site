---
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname;
const isDocsPage = currentPath.includes('/docs');
---

<header class="fixed top-0 left-0 right-0 z-50 border-b border-surface-3 bg-surface-0/80 backdrop-blur-md">
  <nav class="mx-auto max-w-6xl flex items-center justify-between px-6 py-4">
    <a href={base} class="flex items-center gap-3 group">
      <img src={`${base}/icon.png`} alt="uniconv" class="w-8 h-8" />
      <span class="font-mono font-bold text-lg text-white group-hover:text-accent transition-colors">
        uniconv
      </span>
    </a>

    <div class="flex items-center gap-6">
      <a
        href={`${base}/docs/getting-started`}
        class:list={[
          'text-sm font-medium transition-colors',
          isDocsPage ? 'text-accent' : 'text-gray-400 hover:text-white',
        ]}
      >
        Docs
      </a>
      <a
        href="https://github.com/uniconv/uniconv"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-400 hover:text-white transition-colors"
        aria-label="GitHub"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
        </svg>
      </a>
    </div>
  </nav>
</header>
