<section class="py-20 px-6">
  <div class="mx-auto max-w-4xl">
    <h2 class="font-mono font-bold text-2xl sm:text-3xl text-white text-center mb-4">
      Pipeline Syntax
    </h2>
    <p class="text-gray-400 text-center mb-12 max-w-xl mx-auto">
      Chain conversions with <code class="text-accent font-mono text-sm">|</code>, branch with
      <code class="text-accent font-mono text-sm">tee</code>, and pipe from stdin.
    </p>

    <div class="space-y-6">
      <!-- Convert -->
      <div class="terminal-block">
        <div class="terminal-header">
          <span class="terminal-dot bg-red-500/80"></span>
          <span class="terminal-dot bg-yellow-500/80"></span>
          <span class="terminal-dot bg-green-500/80"></span>
          <span class="ml-2 text-xs text-gray-500 font-mono">Convert formats</span>
        </div>
        <div class="terminal-body space-y-1">
          <div class="terminal-comment"># Single conversion with options</div>
          <div class="terminal-prompt text-gray-300">uniconv photo.heic "jpg --quality 85"</div>
        </div>
      </div>

      <!-- Chain -->
      <div class="terminal-block">
        <div class="terminal-header">
          <span class="terminal-dot bg-red-500/80"></span>
          <span class="terminal-dot bg-yellow-500/80"></span>
          <span class="terminal-dot bg-green-500/80"></span>
          <span class="ml-2 text-xs text-gray-500 font-mono">Chain operations</span>
        </div>
        <div class="terminal-body space-y-1">
          <div class="terminal-comment"># Chain multiple conversions</div>
          <div class="terminal-prompt text-gray-300">uniconv video.mp4 "wav | aac"</div>
        </div>
      </div>

      <!-- Tee / Branch -->
      <div class="terminal-block">
        <div class="terminal-header">
          <span class="terminal-dot bg-red-500/80"></span>
          <span class="terminal-dot bg-yellow-500/80"></span>
          <span class="terminal-dot bg-green-500/80"></span>
          <span class="ml-2 text-xs text-gray-500 font-mono">Fan out</span>
        </div>
        <div class="terminal-body space-y-1">
          <div class="terminal-comment"># Convert to multiple formats at once</div>
          <div class="terminal-prompt text-gray-300">uniconv shot.png "tee | jpg --width 640, webp --width 320, tiff --width 800"</div>
        </div>
      </div>

      <!-- Stdin + Clipboard -->
      <div class="terminal-block">
        <div class="terminal-header">
          <span class="terminal-dot bg-red-500/80"></span>
          <span class="terminal-dot bg-yellow-500/80"></span>
          <span class="terminal-dot bg-green-500/80"></span>
          <span class="ml-2 text-xs text-gray-500 font-mono">Stdin &amp; Clipboard</span>
        </div>
        <div class="terminal-body space-y-1">
          <div class="terminal-comment"># Pipe from stdin and copy to clipboard</div>
          <div class="terminal-prompt text-gray-300">echo "https://example.com" | uniconv - "qr | clipboard"</div>
        </div>
      </div>

      <!-- Generator -->
      <div class="terminal-block">
        <div class="terminal-header">
          <span class="terminal-dot bg-red-500/80"></span>
          <span class="terminal-dot bg-yellow-500/80"></span>
          <span class="terminal-dot bg-green-500/80"></span>
          <span class="ml-2 text-xs text-gray-500 font-mono">Generators</span>
        </div>
        <div class="terminal-body space-y-1">
          <div class="terminal-comment"># Generate content without an input file</div>
          <div class="terminal-prompt text-gray-300">uniconv - "random-noise --width 512 | png"</div>
        </div>
      </div>
    </div>
  </div>
</section>
