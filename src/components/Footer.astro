---
const base = import.meta.env.BASE_URL;
---

<footer class="border-t border-surface-3 bg-surface-1">
  <div class="mx-auto max-w-6xl px-6 py-10 flex flex-col sm:flex-row items-center justify-between gap-4 text-sm text-gray-500">
    <div class="flex items-center gap-2">
      <img src={`${base}/icon.png`} alt="" class="w-5 h-5 opacity-50" />
      <span>uniconv &mdash; MIT License</span>
    </div>
    <div class="flex items-center gap-6">
      <a
        href="https://github.com/uniconv/uniconv"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-gray-300 transition-colors"
      >
        GitHub
      </a>
      <a
        href="https://github.com/uniconv/uniconv/releases"
        target="_blank"
        rel="noopener noreferrer"
        class="hover:text-gray-300 transition-colors"
      >
        Releases
      </a>
      <a
        href={`${base}/docs/getting-started`}
        class="hover:text-gray-300 transition-colors"
      >
        Docs
      </a>
    </div>
  </div>
</footer>
