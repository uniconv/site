---
const base = import.meta.env.BASE_URL;
---

<section class="relative overflow-hidden">
  <!-- Gradient background -->
  <div class="absolute inset-0 bg-gradient-to-b from-accent/5 via-transparent to-transparent pointer-events-none"></div>

  <div class="mx-auto max-w-4xl px-6 pt-24 pb-20 text-center relative">
    <div class="mb-8">
      <img src={`${base}/app-icon.png`} alt="uniconv logo" class="w-24 h-24 mx-auto mb-6" />
    </div>

    <h1 class="font-mono font-bold text-4xl sm:text-5xl md:text-6xl text-white mb-6 leading-tight">
      Universal File<br />Converter
    </h1>

    <p class="text-lg sm:text-xl text-gray-400 max-w-2xl mx-auto mb-10 leading-relaxed">
      A plugin-based pipeline architecture for the command line.
      Chain, branch, and transform any file &mdash; from images to documents to video.
    </p>

    <!-- Install command -->
    <div class="inline-block relative group">
      <div class="terminal-block max-w-2xl mx-auto text-left">
        <div class="terminal-header">
          <span class="terminal-dot bg-red-500/80"></span>
          <span class="terminal-dot bg-yellow-500/80"></span>
          <span class="terminal-dot bg-green-500/80"></span>
          <span class="ml-2 text-xs text-gray-500 font-mono">Terminal</span>
        </div>
        <div class="terminal-body relative">
          <code id="install-cmd" class="terminal-prompt text-gray-300">
            curl -fsSL https://raw.githubusercontent.com/uniconv/uniconv/main/install.sh | bash
          </code>
          <button
            id="copy-install"
            class="copy-button"
            aria-label="Copy to clipboard"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
          </button>
        </div>
      </div>
    </div>

    <div class="mt-8 flex flex-wrap items-center justify-center gap-4">
      <a
        href={`${base}/docs/getting-started`}
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-accent text-surface-0 font-semibold text-sm hover:bg-accent-bright transition-colors"
      >
        Get Started
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      <a
        href="https://github.com/uniconv/uniconv"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border border-surface-3 text-gray-300 font-semibold text-sm hover:border-gray-500 hover:text-white transition-colors"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
        </svg>
        GitHub
      </a>
    </div>
  </div>
</section>

<script>
  document.getElementById('copy-install')?.addEventListener('click', () => {
    const cmd = 'curl -fsSL https://raw.githubusercontent.com/uniconv/uniconv/main/install.sh | bash';
    navigator.clipboard.writeText(cmd).then(() => {
      const btn = document.getElementById('copy-install');
      if (btn) {
        btn.innerHTML = '<svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>';
        setTimeout(() => {
          btn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>';
        }, 2000);
      }
    });
  });
</script>
