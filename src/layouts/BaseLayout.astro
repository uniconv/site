---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const base = import.meta.env.BASE_URL;
const {
  title = 'uniconv â€” Universal File Converter',
  description = 'A universal file converter with a plugin-based pipeline architecture. Chain, branch, and transform any file from the command line.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/png" href={`${base}/app-icon.png`} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1 pt-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>
