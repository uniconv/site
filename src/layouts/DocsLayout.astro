---
import BaseLayout from './BaseLayout.astro';
import DocsSidebar from '../components/DocsSidebar.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={`${title} â€” uniconv docs`}>
  <div class="mx-auto max-w-6xl px-6 py-12">
    <div class="flex flex-col lg:flex-row gap-10">
      <DocsSidebar />
      <article class="flex-1 min-w-0 prose-docs">
        <h1 class="font-mono font-bold text-3xl text-white mb-8">{title}</h1>
        <slot />
      </article>
    </div>
  </div>
</BaseLayout>

<style is:global>
  .prose-docs h2 {
    @apply font-mono font-semibold text-xl text-white mt-10 mb-4 pt-6 border-t border-surface-3;
  }
  .prose-docs h3 {
    @apply font-mono font-medium text-lg text-white mt-8 mb-3;
  }
  .prose-docs p {
    @apply text-gray-400 leading-relaxed mb-4;
  }
  .prose-docs a {
    @apply text-accent hover:text-accent-bright underline underline-offset-2 transition-colors;
  }
  .prose-docs code {
    @apply font-mono text-sm bg-surface-2 text-accent-bright px-1.5 py-0.5 rounded;
  }
  .prose-docs pre {
    @apply bg-surface-1 border border-surface-3 rounded-lg p-5 overflow-x-auto mb-6;
  }
  .prose-docs pre code {
    @apply bg-transparent p-0 text-gray-300 text-sm leading-relaxed;
  }
  .prose-docs ul {
    @apply list-disc list-inside space-y-2 mb-4 text-gray-400;
  }
  .prose-docs ol {
    @apply list-decimal list-inside space-y-2 mb-4 text-gray-400;
  }
  .prose-docs li {
    @apply leading-relaxed;
  }
  .prose-docs table {
    @apply w-full mb-6 text-sm;
  }
  .prose-docs thead {
    @apply border-b border-surface-3;
  }
  .prose-docs th {
    @apply text-left py-2 px-3 text-gray-300 font-mono font-medium;
  }
  .prose-docs td {
    @apply py-2 px-3 text-gray-400 border-b border-surface-3/50;
  }
  .prose-docs blockquote {
    @apply border-l-2 border-accent/40 pl-4 my-4 text-gray-500 italic;
  }
  .prose-docs strong {
    @apply text-gray-200 font-semibold;
  }
  .prose-docs hr {
    @apply border-surface-3 my-8;
  }
</style>
